<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper
	namespace="com.ck.ck181228.product_info.mapper.Product_infoMapper">

	<!-- Result Map -->
	<resultMap id="BaseResultMap"
		type="com.ck.ck181228.product_info.model.Product_infoModel">
		<result column="id" property="id" />
		<result column="code" property="code" />
		<result column="name" property="name" />
		<result column="sum" property="sum" />
		<result column="cost" property="cost" />
		<result column="cost_unit_price" property="cost_unit_price" />
	</resultMap>
	<!-- table all fields sql片段 -->
	<sql id="Base_Column_List">
		id,code,name,sum,cost,cost_unit_price
	</sql>
	<sql id="Example_Where_Clause">
		where 1=1
		<if test="id != null">
			and id = #{id}
		</if>
		<if test="code != null and code != ''">
			and code like #{code}
		</if>
		<if test="name !=null and name !=''">
			and name like #{name}
		</if>
		<if test="sum != null and sum != ''">
			and sum = #{sum}
		</if>
		<if test="cost !=null and cost !=''">
			and cost = #{cost}
		</if>
		<if test="cost_unit_price !=null and cost_unit_price !=''">
			and cost_unit_price = #{cost_unit_price}
		</if>
	</sql>
	<insert id="insert" parameterType="Object">
		insert into
		mis.product_info(code,name,sum,cost,cost_unit_price)
		values(#{code},#{name},#{sum},#{cost},#{cost_unit_price})
	</insert>
	<update id="update" parameterType="Object">
		update mis.product_info set
		id = id
		<if test="name !=null and name !=''">
			,name = #{name}
		</if>
		<if test="sum != null and sum != ''">
			,sum = #{sum}
		</if>
		<if test="cost !=null and cost !=''">
			,cost = #{cost}
		</if>
		where id = #{id}
	</update>
	<update id="updateModel" parameterType="Object">
		update mis.product_info set
		id = id
		<if test="name !=null and name !=''">
			,name = #{name}
		</if>
		<if test="sum != null and sum != ''">
			,sum = #{sum}
		</if>
		<if test="cost !=null and cost !=''">
			,cost = #{cost}
		</if>
		where code = #{code}
	</update>
	<delete id="delete" parameterType="Object">
		delete from
		mis.product_info
		where id = #{id}
	</delete>
	<delete id="deleteModel" parameterType="Object">
		delete from
		mis.product_info where code = #{code}
	</delete>
	<select id="select" resultMap="BaseResultMap"
		parameterType="Object">
		select
		<include refid="Base_Column_List" />
		from mis.product_info
		<include refid="Example_Where_Clause" />
	</select>
	<select id="selectList" resultMap="BaseResultMap"
		parameterType="Object">
		select
		<include refid="Base_Column_List" />
		from mis.product_info
		<include refid="Example_Where_Clause" />
		order by sum desc 
		limit ${rowStart},${pageLimit}
	</select>
	<select id="selectModel" resultMap="BaseResultMap"
		parameterType="Object">
		select
		<include refid="Base_Column_List" />
		from mis.product_info
		<include refid="Example_Where_Clause" />
		order by sum desc 
	</select>
	<select id="selectCount" resultType="int" parameterType="Object">
		select count(1) from mis.product_info
		<include refid="Example_Where_Clause"></include>
	</select>
</mapper>