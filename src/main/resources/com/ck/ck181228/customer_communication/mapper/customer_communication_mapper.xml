<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper
	namespace="com.ck.ck181228.customer_communication.mapper.Customer_communicationMapper">

	<!-- Result Map -->
	<resultMap id="BaseResultMap"
		type="com.ck.ck181228.customer_communication.model.Customer_communicationModel">
		<result column="id" property="id" />
		<result column="user_code" property="user_code" />
		<result column="cust_code" property="cust_code" />
		<result column="TIME" property="TIME" />
		<result column="type" property="type" />
		<result column="cust_name" property="cust_name" />
		<result column="user_name" property="user_name" />
		<result column="content" property="content" />
	</resultMap>
	<!-- table all fields sql片段 -->
	<sql id="Base_Column_List">
		cc.id,cc.user_code,cc.cust_code,cc.TIME,cc.type,cc.content
		,(select c.cust_name from mis.customer_info as c where c.cust_code = cc.cust_code)cust_name
		,(select u.user_name from mis.user_management as u where u.user_code = cc.user_code)user_name
	</sql>
	<sql id="Example_Where_Clause">
		where 1=1
		<if test="id != null">
			and id = #{id}
		</if>
		<if test="user_code != null and user_code != ''">
			and user_code = #{user_code}
		</if>
		<if test="cust_code !=null and cust_code !=''">
			and cust_code like #{cust_code}
		</if>
		<if test="TIME != null and TIME != ''">
			and TIME = #{TIME}
		</if>
		<if test="type !=null and type !=''">
			and type = #{type}
		</if>
		<if test="content !=null and content !=''">
			and content = #{content}
		</if>
	</sql>
	<insert id="insert" parameterType="Object">
		insert into
		mis.customer_communication(user_code,cust_code,TIME,type,content)
		values(#{user_code},#{cust_code},now(),#{type},#{content})
	</insert>
	<update id="update" parameterType="Object">
		update mis.customer_communication set
		id = id
		<if test="type !=null and type !=''">
			,type = #{type}
		</if>
		<if test="content !=null and content !=''">
			,content = #{content}
		</if>
		where id = #{id}
	</update>
	<update id="updateModel" parameterType="Object">
		update mis.customer_communication set
		id = id
		<if test="type !=null and type !=''">
			,type = #{type}
		</if>
		<if test="content !=null and content !=''">
			,content = #{content}
		</if>
		where cust_code = #{cust_code}
	</update>
	<delete id="delete" parameterType="Object">
		delete from
		mis.customer_communication where id = #{id}
	</delete>
	<delete id="deleteModel" parameterType="Object">
		delete from
		mis.customer_communication where user_code = #{user_code}
	</delete>
	<select id="select" resultMap="BaseResultMap"
		parameterType="Object">
		select
		<include refid="Base_Column_List" />
		from mis.customer_communication as cc
		<include refid="Example_Where_Clause" />
	</select>
	<select id="selectList" resultMap="BaseResultMap"
		parameterType="Object">
		select
		<include refid="Base_Column_List" />
		from mis.customer_communication as cc
		<include refid="Example_Where_Clause" />
		limit ${rowStart},${pageLimit}
	</select>
	<select id="selectModel" resultMap="BaseResultMap"
		parameterType="Object">
		select
		<include refid="Base_Column_List" />
		from mis.customer_communication as cc
		<include refid="Example_Where_Clause" />
	</select>
	<select id="selectCount" resultType="int" parameterType="Object">
		select count(1) from mis.customer_communication
		<include refid="Example_Where_Clause"></include>
	</select>
</mapper>